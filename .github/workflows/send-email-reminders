
jobs:
  run_daily_check:
    runs-on: ubuntu-latest

    steps:
      - name: Send POST request to Supabase Edge Function
        run: |
          curl -X POST -H "Content-Type: application/json" -d '{}' ${{ secrets.CRON_JOB_URL }}



# .github/workflows/send-email-reminders.yml
name: Send Email Reminders

on:
  schedule:
    - cron: '0 9 * * *'   # Runs daily at 9:00 UTC
  workflow_dispatch:

jobs:
  send_email_reminders:
    runs-on: ubuntu-latest
    steps:
      - name: Send POST request to Supabase Edge Function (send-email-reminders)
        run: |
          curl -X POST -H "Content-Type: application/json" -d '{}' ${{ secrets.REMINDER_JOB_URL }}
